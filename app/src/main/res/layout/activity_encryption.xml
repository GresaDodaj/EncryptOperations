                        <TextView

                            android:padding="3dip"
                            android:text="@string/_10kb"
                            android:textAllCaps="true" />

                        <TextView

                            android:id="@+id/time3DES10kb"
                            android:gravity="right"
                            android:padding="3dip" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView

                            android:padding="3dip"
                            android:text="@string/_100kb"
                            android:textAllCaps="true" />

                        <TextView

                            android:id="@+id/time3DES100kb"
                            android:gravity="right"
                            android:padding="3dip" />
                    </TableRow>

                    <TableRow android:layout_height="wrap_content">

                        <TextView

                            android:padding="3dip"
                            android:text="@string/_1mb"
                            android:textAllCaps="true" />

                        <TextView

                            android:id="@+id/time3DES1mb"
                            android:gravity="right"
                            android:padding="3dip" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/btn3DES"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_gravity="bottom"
                    android:background="#F8F9FA"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:shadowColor="#5BFFFFFF"
                        android:text="@string/_3des"
                        android:textColor="#030303"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:shadowColor="#5BFFFFFF"
                        android:text="average per bytes"
                        android:textAllCaps="true"
                        android:textColor="#030303"
                        android:textSize="10sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="match_parent"
