                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView

                            android:padding="3dip"
                            android:text="@string/_5kb"
                            android:textAllCaps="true" />

                        <TextView

                            android:id="@+id/timeDES5kb"
                            android:gravity="right"
                            android:padding="3dip" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView

                            android:padding="3dip"
                            android:text="@string/_10kb"
                            android:textAllCaps="true" />

                        <TextView

                            android:id="@+id/timeDES10kb"
                            android:gravity="right"
                            android:padding="3dip" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView

                            android:padding="3dip"
                            android:text="@string/_100kb"
                            android:textAllCaps="true" />

                        <TextView

                            android:id="@+id/timeDES100kb"
                            android:gravity="right"
                            android:padding="3dip" />
                    </TableRow>

                    <TableRow android:layout_height="wrap_content">

                        <TextView

                            android:padding="3dip"
                            android:text="@string/_1mb"
                            android:textAllCaps="true" />

                        <TextView

                            android:id="@+id/ES1mb"
                            android:gravity="right"
                            android:padding="3dip" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/btnDES"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_gravity="bottom"
                    android:background="#F8F9FA"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/andada"
                        android:shadowColor="#5BFFFFFF"
                        android:text="@string/des"
                        android:textColor="#030303"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:shadowColor="#5BFFFFFF"
                        android:text="@string/test"
                        android:textColor="#030303" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00070707"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
