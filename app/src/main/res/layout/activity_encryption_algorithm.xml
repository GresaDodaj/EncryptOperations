<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.trying.myapplication"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="289dp"
            android:layout_margin="10dip"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#80999191">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:orientation="vertical"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:width="68dp"
                        android:background="#AB134561"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip"
                        android:text="@string/file_size"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView

                        android:width="100dip"
                        android:background="#AB134561"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip"
                        android:text="@string/encryption_time"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:width="120dip"
                        android:background="#AB134561"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView

                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip"
                        android:text="@string/_10kb"
                        android:textAllCaps="true"
                        android:textColor="#000000" />

                    <TextView

                        android:id="@+id/time10kb"
                        android:width="100dip"
                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip" />

                    <Button

                        android:id="@+id/btn10kb"
                        android:layout_width="120dip"
                        android:layout_height="match_parent"
                        android:width="90dip"
                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:maxWidth="100dip"
                        android:padding="3dip"
                        android:text="@string/encrypt"
                        android:textAllCaps="false"
                        android:textSize="12sp" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView

                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip"
                        android:text="@string/_100kb"
                        android:textAllCaps="true"
                        android:textColor="#000000" />

                    <TextView

                        android:id="@+id/time100kb"
                        android:width="100dip"
                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip" />


                    <Button

                        android:id="@+id/btn100kb"
                        android:layout_width="103dip"
                        android:layout_height="match_parent"
                        android:width="90dip"
                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:maxWidth="100dip"
                        android:padding="3dip"
                        android:text="@string/encrypt"
                        android:textAllCaps="false"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView

                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip"
                        android:text="@string/_500kb"
                        android:textAllCaps="true"
                        android:textColor="#000000" />

                    <TextView

                        android:id="@+id/time500kb"
                        android:width="100dip"
                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip" />

                    <Button

                        android:id="@+id/btn500kb"
                        android:layout_width="103dip"
                        android:layout_height="match_parent"
                        android:width="90dip"
                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:maxWidth="100dip"
                        android:padding="3dip"
                        android:text="@string/encrypt"
                        android:textAllCaps="false"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView

                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip"
                        android:text="@string/_1mb"
                        android:textAllCaps="true"
                        android:textColor="#000000" />

                    <TextView

                        android:id="@+id/time1mb"
                        android:width="100dip"
                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:padding="3dip" />

                    <Button

                        android:id="@+id/btn1mb"
                        android:layout_width="103dip"
                        android:layout_height="match_parent"
                        android:width="90dip"
                        android:background="@drawable/cells"
                        android:fontFamily="@font/abeezee"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:maxWidth="100dip"
                        android:padding="3dip"
                        android:text="@string/encrypt"
                        android:textAllCaps="false"
                        android:textSize="12sp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/btnAES"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_gravity="bottom"
                android:background="#AB134561"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRunAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#A1F8F9FA"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/abeezee"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="@string/run_all" />

                <TextView
                    android:id="@+id/algorithmTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:fontFamily="@font/abeezee"
                    android:shadowColor="#5BFFFFFF"
                    android:text="@string/aes"
                    android:textColor="#030303"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/lightGray" />

                <TextView
                    android:id="@+id/avgResult"
                    android:layout_width="310dip"
                    android:layout_height="26dip"
                    android:fontFamily="@font/abeezee"
                    android:gravity="center"
                    android:padding="5dip"
                    android:shadowColor="#5BFFFFFF"
                    android:text="@string/average"
                    android:textAllCaps="false"
                    android:textColor="#030303"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:layout_margin="10dip"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout

                android:id="@+id/showChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8F9FA"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:background="@drawable/chart_icon"
                    android:contentDescription="@string/todo"
                    android:padding="10dip"
                    android:src="@drawable/ic_attach_money_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:fontFamily="@font/abeezee"
                    android:shadowColor="#00FFFDFD"
                    android:text="@string/show_averages"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textColorHint="#050505"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_margin="10dip"
                    android:background="@color/lightGray" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>